<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="395dp"
        android:layout_height="709dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFirstName"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:text="First Name:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewFN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLastName"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Last Name:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtViewLN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textBirthDate"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Birth Date:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPhoneNumber"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewPN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textEmailAddress"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Email Address:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewEA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSchoolName"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="School Name:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewSN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGuardiansName"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Guardian's Name:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewGN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGraduatedSchool"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Graduated School:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewGS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGender"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRelationshipStatus"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Relationship Status:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtviewRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Return"
                android:textColorLink="@android:color/holo_red_dark"
                app:cornerRadius="100dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>